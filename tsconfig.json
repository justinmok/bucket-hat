{
    "compilerOptions": {
      "outDir": "./build",
      "allowJs": true,
      "target": "ES6",
      "types": ["node"],
      "strictNullChecks": true,
      "esModuleInterop": true,
      "typeRoots": ["./typings"],
      "paths": {"*": ["./typings/*"]},
      "skipLibCheck": true,
      "module": "CommonJS",
      "sourceMap": true
    },
    "include": ["./src/**/*"],
    "exclude": [".node_modules/"]
}