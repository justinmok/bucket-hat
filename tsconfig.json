{
    "compilerOptions": {
      "outDir": "./build",
      "allowJs": true,
      "target": "ES2017",
      "types": ["node"],
      "strictNullChecks": true,
      "esModuleInterop": true,
      "typeRoots": ["./typings"],
      "paths": {"*": ["./typings/*"]},
      "skipLibCheck": true,
      "module": "NodeNext",
      "sourceMap": true
    },
    "include": ["./src/**/*", "./typings/**/*"],
    "exclude": [".node_modules/"]
}