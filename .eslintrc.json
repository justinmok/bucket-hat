{
    "env": {
        "node": true,
        "commonjs": true,
        "mocha": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "prettier"], 
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 12
    },
    "ignorePatterns": ["./build/*.js"],
    "rules": {
        "indent": [
            "error",
            4,
            { "SwitchCase" : 1 }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
